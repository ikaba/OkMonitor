<Window x:Class="OkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OkMonitor" Height="48" Width="132" Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" MouseDown="Window_MouseDown" 
        ShowInTaskbar="False" Topmost="True" Background="#FF88D18C" MouseDoubleClick="Window_MouseDoubleClick">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="tbPrice" TextWrapping="Wrap" Text="0.00" 
                   FontSize="24"/>
            <TextBlock  TextWrapping="Wrap" Text="￥" 
                   FontSize="24"/>
        </StackPanel>
        <Border BorderThickness="2" BorderBrush="#FF258F14" Name="bdFlag"/>
    </Grid>
</Window>
